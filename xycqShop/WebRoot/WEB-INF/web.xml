<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <servlet>
    <servlet-name>CheckImgServlet</servlet-name>
    <display-name>CheckImgServlet</display-name>
    <description>验证码生成</description>
    <servlet-class>caotinging.web.servlet.CheckImgServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <display-name>IndexServlet</display-name>
    <description>首页数据的展示</description>
    <servlet-class>caotinging.web.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BaseServlet</servlet-name>
    <display-name>BaseServlet</display-name>
    <description>Servlet去冗余</description>
    <servlet-class>caotinging.web.servlet.BaseServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <display-name>UserServlet</display-name>
    <description>用户信息模块</description>
    <servlet-class>caotinging.web.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProductServlet</servlet-name>
    <display-name>ProductServlet</display-name>
    <description>商品信息模块</description>
    <servlet-class>caotinging.web.servlet.ProductServlet</servlet-class>
  </servlet>









  <servlet-mapping>
    <servlet-name>CheckImgServlet</servlet-name>
    <url-pattern>/servlet/CheckImgServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/servlet/IndexServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BaseServlet</servlet-name>
    <url-pattern>/servlet/BaseServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/servlet/UserServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductServlet</servlet-name>
    <url-pattern>/servlet/ProductServlet</url-pattern>
  </servlet-mapping>
    <welcome-file-list>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>

</web-app>